source 'http://rubygems.org'

gem 'rails', '3.0.1'
gem 'mysql', '2.8.1'       # database
gem 'foreigner', '0.9.1'   # foreign key constraints
gem 'omniauth', '0.1.6'    # authentication
gem 'haml', '3.0.23'       # markup and css templates
gem 'haml-rails', '0.3.4'  # use haml as templating engine
gem 'jammit', '0.5.3'      # asset packaging
gem 'compass', '0.10.6'    # sass mixins and generators
gem 'chunky_png', '0.11.0' # encode PNG images

group :test do
  gem 'ruby-debug', :group => [:development, :test]
  gem 'rspec-rails', '>= 2.0', :group => [:development, :test]
  gem 'cucumber-rails', :group => :test
  gem 'capybara', :group => :test
  gem 'thin', :require => nil
end

